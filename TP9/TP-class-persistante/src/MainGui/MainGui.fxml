<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainGui.MainGuiController">
   <center>
      <VBox fx:id="vbox" alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="Btn1" mnemonicParsing="false" onAction="#profsScene" styleClass="buttonGrp1" text="Gérer les professeurs">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="Btn2" mnemonicParsing="false" onAction="#departsScene" styleClass="buttonGrp1" text="Gérer les départements">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="Btn3" mnemonicParsing="false" onAction="#Quit" styleClass="Btn3" text="Quitter">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </center>
   <bottom>
      <Hyperlink text="https://github.com/ubmagh/" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
